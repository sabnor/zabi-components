{
  "name": "zabi-components",
  "version": "3.0.2",
  "description": "A modern Svelte 5 component library with TypeScript, Tailwind CSS, and SSR support",
  "type": "module",
  "main": "dist/index/index.js",
  "module": "dist/index/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index/index.js",
      "svelte": "./dist/index/index.js"
    },
    "./atoms": {
      "types": "./dist/atoms/index.d.ts",
      "import": "./dist/atoms/index.js",
      "svelte": "./dist/atoms/index.js"
    },
    "./molecules": {
      "types": "./dist/molecules/index.d.ts",
      "import": "./dist/molecules/index.js",
      "svelte": "./dist/molecules/index.js"
    },
    "./organisms": {
      "types": "./dist/organisms/index.d.ts",
      "import": "./dist/organisms/index.js",
      "svelte": "./dist/organisms/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./dist/zabi-components.css": "./dist/zabi-components.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "svelte",
    "svelte5",
    "sveltekit",
    "components",
    "ui",
    "typescript",
    "tailwind",
    "runes",
    "ssr"
  ],
  "author": "Zabi Components Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zabi-components/zabi-components.git"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run build:types",
    "build:lib": "vite build --config vite.lib.config.ts && node scripts/generate-types.js",
    "build:types": "tsc --project tsconfig.lib.json",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build:lib"
  },
  "devDependencies": {
    "@storybook/addon-svelte-csf": "^5.0.8",
    "@storybook/sveltekit": "^9.1.7",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.44.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^24.5.2",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "storybook": "^9.1.7",
    "svelte": "^5.38.10",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "@lucide/svelte": "^0.544.0",
    "zabi-components": "^3.0.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.38.10"
  },
  "peerDependenciesMeta": {
    "svelte": {
      "optional": false
    },
    "@sveltejs/kit": {
      "optional": true
    }
  },
  "svelte": "./dist/index/index.js",
  "ssr": true
}
